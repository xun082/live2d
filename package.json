{
  "name": "digital-life",
  "private": true,
  "version": "2.0.7",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "preview": "vite preview",
    "tauri": "tauri",
    "release:create": "commit-and-tag-version",
    "release:push": "git push --follow-tags",
    "switch:tauri": "tsx ./scripts/switch-to-tauri.ts",
    "switch:web": "tsx ./scripts/switch-to-web.ts",
    "test:build": "echo '请到 GitHub Actions 页面手动触发 Test Build 工作流'",
    "d:tauri": "pnpm run dev:tauri",
    "d:web": "pnpm run dev:web",
    "b:tauri": "pnpm run build:tauri",
    "b:web": "pnpm run build:web",
    "dev:tauri": "pnpm run switch:tauri && pnpm run tauri dev",
    "build:tauri": "pnpm run switch:tauri && pnpm run tauri build",
    "build:win": "pnpm run switch:tauri && pnpm run tauri build --target x86_64-pc-windows-msvc",
    "build:win-arm": "pnpm run switch:tauri && pnpm run tauri build --target aarch64-pc-windows-msvc",
    "build:mac": "pnpm run switch:tauri && pnpm run tauri build --target x86_64-apple-darwin",
    "build:mac-arm": "pnpm run switch:tauri && pnpm run tauri build --target aarch64-apple-darwin",
    "build:linux": "pnpm run switch:tauri && pnpm run tauri build --target x86_64-unknown-linux-gnu",
    "build:all": "pnpm run build:mac && pnpm run build:mac-arm && pnpm run build:win && pnpm run build:win-arm",
    "dev:web": "pnpm run switch:web && vite",
    "build:web": "pnpm run switch:web && vite build --outDir ./dist-web",
    "preview:web": "vite preview --outDir ./dist-web"
  },
  "commit-and-tag-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "refactor",
        "section": "Refactoring"
      },
      {
        "type": "perf",
        "section": "Improvements"
      }
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@ant-design/x": "^1.0.5",
    "@aws-sdk/client-s3": "^3.758.0",
    "@leaf/parse-think": "npm:@jsr/leaf__parse-think",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tauri-apps/plugin-dialog": "~2.2.0",
    "@tauri-apps/plugin-shell": "~2.2.0",
    "@tauri-apps/plugin-store": "~2.2.0",
    "antd": "^5.24.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "emoji-regex": "^10.4.0",
    "idb-keyval": "^6.2.1",
    "l2d": "^1.0.0",
    "lucide-react": "^0.543.0",
    "markdown-it": "^14.1.0",
    "next-themes": "^0.4.6",
    "openai": "^4.87.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-resizable-panels": "^3.0.5",
    "react-router-dom": "^7.8.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/vite": "^4.0.13",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "commit-and-tag-version": "^12.5.0",
    "globals": "^15.15.0",
    "tailwindcss": "^4.0.13",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.6.3",
    "vite": "^6.2.1"
  }
}
